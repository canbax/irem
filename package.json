{
  "name": "irem",
  "version": "1.0.2-beta",
  "description": "Search for any city in any language in Earth.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canbax/irem.git"
  },
  "funding": "https://github.com/canbax/irem?sponsor=1",
  "author": {
    "name": "Yusuf Sait Canbaz",
    "url": "https://github.com/canbax"
  },
  "type": "module",
  "exports": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "husky": "^9.0.11",
    "istanbul-badges-readme": "^1.9.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "scripts": {
    "build": "del dist && tsc && npm run copy-data",
    "copy-data": "cp -r src/data dist/",
    "test": "vitest",
    "prepare": "husky",
    "format": "prettier --write .",
    "make-badges": "istanbul-badges-readme",
    "coverage": "vitest run --coverage",
    "all": "npm run build && npm run build-dev && npm run format && npm run lint && npm run lint-fix"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "country",
    "city",
    "region",
    "state",
    "multi-lingual",
    "multilingual",
    "multi-language",
    "language",
    "administrative",
    "division",
    "town",
    "human",
    "settlement",
    "locality",
    "county",
    "urban",
    "village",
    "cities",
    "countries",
    "regions",
    "states",
    "world",
    "whole",
    "world",
    "human-geographic",
    "territorial",
    "entity",
    "human",
    "geography",
    "hierarchy"
  ],
  "bugs": {
    "url": "https://github.com/canbax/irem/issues"
  },
  "homepage": "https://github.com/canbax/irem#readme",
  "lint-staged": {
    "*.{ts}": [
      "prettier --write"
    ]
  }
}